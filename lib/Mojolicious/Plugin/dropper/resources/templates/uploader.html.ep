<html>
<head>
%= stylesheet '/dropzone.min.css'
%= stylesheet '/style.css'
%= javascript '/dropzone.min.js'
</head>
<body>
<p><%= link_to 'Dropper' => 'dropper' %></p>
%= form_for 'upload' => (method => 'POST', class => "dropzone needsclick dz-clickable", id => "demo-upload") => begin
%= check_box 'qrcodes', (id => 'qrcodes') if $qrcodes
%= label_for 'qrcodes' => 'Generate QR Code?' if $qrcodes
<div id="dropzone">
  <div>
    <div class="dz-message needsclick">
      Drop files here or click to upload.<br>
    </div>
  </div>
</div>
% end
</body>
%= javascript begin
  Dropzone.options.demoUpload = {
    init: function() {
      this.on("success", function(file, res) {
        if (res.url) {
          file.previewElement.addEventListener("click", function() {
            document.location.href=res.url;
          });
        }
      });
    }
  };
% end
</html>
